<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".ui.activities.home.EventDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp18"
            android:layout_marginEnd="@dimen/dp18"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:layout_marginTop="@dimen/dp8">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/background"
                    app:riv_corner_radius="@dimen/dp5" />

                <RelativeLayout
                    android:id="@+id/rlHeart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/ivHeart"
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp10"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/image"
                        android:src="@drawable/heart_new" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_toStartOf="@id/tvLocation"
                    android:fontFamily="@font/trajanpro_regular"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="@dimen/dp5"
                    android:fontFamily="@font/trajanpro_regular"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/sp10"
                    android:drawableStart="@drawable/loaction" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/dp2"
                android:layout_marginEnd="@dimen/dp5"
                android:fontFamily="@font/trajanpro_regular"
                android:lines="1"
                android:text="@string/sat_5_jan_may_8_00_am"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp2"
                    android:fontFamily="@font/trajanpro_regular"
                    android:lines="1"
                    android:text="@string/link"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tvWebLinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp2"
                    android:layout_marginEnd="@dimen/dp5"
                    android:lines="1"
                    android:text="@string/https_www_google_com"
                    android:textColor="#04789F"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/romul"
                android:lines="1"
                android:text="@string/description"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="4dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp10" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>