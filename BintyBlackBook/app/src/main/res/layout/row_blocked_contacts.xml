<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:background="@drawable/email_back"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_profile"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/edit_profile" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:fontFamily="@font/romul"
                    android:layout_weight="0.6"
                    android:lineSpacingExtra="4dp"
                    android:text=""
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/sp11" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.4">
                    <TextView
                        android:id="@+id/tvUnblock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:background="@drawable/text_bg_rounded_corners"
                        android:fontFamily="@font/romul"
                        android:text="Un-block"
                        android:textColor="@color/whiteColor"
                        android:textSize="7sp"
                        android:layout_gravity="center"/>
                </LinearLayout>



            </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_request"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:visibility="gone"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/email_back"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/romul"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:text="@string/john"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/sp11" />

                <LinearLayout
                    android:id="@+id/llAcceptReq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp30"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAcceptReq"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="90dp"
                        android:layout_height="28dp"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:background="@drawable/accept" />

                    <Button
                        android:id="@+id/btnCancelReq"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="90dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="@dimen/dp10"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:background="@drawable/cancel" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>