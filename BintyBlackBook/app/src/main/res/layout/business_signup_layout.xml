<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/uname_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:fontFamily="@font/romul"
        android:background="@drawable/email_back"
        android:hint="BUSINESS NAME"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/blackColor"
        android:textSize="13sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/email_back">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/romul"
            app:ccp_autoDetectCountry="true"
            app:ccp_autoDetectLanguage="true"
            app:ccp_contentColor="@color/blackColor"
            app:ccp_countryAutoDetectionPref="NETWORK_SIM_LOCALE"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false"
            app:ccp_textSize="@dimen/sp13" />


        <EditText
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ccp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/romul"
            android:background="@drawable/email_back"
            android:hint="PHONE NUMBER"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="10"
            android:textColor="@color/blackColor"
            android:textSize="13sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <EditText
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:fontFamily="@font/romul"
        android:background="@drawable/email_back"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/blackColor"
        android:textSize="13sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:fontFamily="@font/romul"
        android:background="@drawable/email_back"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/blackColor"
        android:textSize="13sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/confpassword_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:fontFamily="@font/romul"
        android:background="@drawable/email_back"
        android:hint="CONFIRM PASSWORD"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/blackColor"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/romul"
        android:layout_toRightOf="@+id/ivCheckbox"
        android:drawablePadding="3dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="Add Promo Code"
        android:textColor="@color/whiteColor"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/about_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/romul"
        android:background="@drawable/email_back"
        android:hint="WRITE HERE"
        android:inputType="text"
        android:gravity="start"
        android:textColor="@color/blackColor"
        android:textSize="13sp"
        android:textStyle="bold" />


</LinearLayout>