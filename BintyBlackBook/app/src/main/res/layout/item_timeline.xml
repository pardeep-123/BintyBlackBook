<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp10"
    android:background="@color/themeColor">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/alina" />

    <RelativeLayout
        android:id="@+id/rlName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_toEndOf="@id/civ_profile">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_toStartOf="@id/llTime"
            android:fontFamily="@font/romul"
            android:lines="1"
            android:text="@string/john"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sp13"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/romul"
                android:lines="1"
                android:text="2m ago"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp10" />

            <RelativeLayout
                android:id="@+id/rlDots"
                android:layout_width="40dp"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/dots" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/rlName"
        android:layout_marginStart="@dimen/dp10"
        android:layout_toEndOf="@id/civ_profile"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPost"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toEndOf="@id/civ_profile"
        android:text="@string/dummy_text"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/sp11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_marginStart="@dimen/dp2"
        android:layout_toEndOf="@id/civ_profile"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlHeart"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/ivHeart"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_centerInParent="true"
                android:contentDescription="@string/image"
                android:src="@drawable/like" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/romul"
            android:text=""
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sp12" />


        <RelativeLayout
            android:id="@+id/rlComments"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp20">

            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_centerInParent="true"
                android:contentDescription="@string/image"
                android:src="@drawable/comment" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/romul"
            android:text="100"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

</RelativeLayout>