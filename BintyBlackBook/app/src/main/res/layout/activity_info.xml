<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".ui.activities.authentication.InfoActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_profile"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/edit_profile" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/upload_camera" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/name"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green"
                android:fontFamily="@font/romul"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green"
                android:fontFamily="@font/romul"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/phone_number"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/romul"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoDetectLanguage="true"
                    app:ccp_contentColor="@color/whiteColor"
                    app:ccp_countryAutoDetectionPref="NETWORK_SIM_LOCALE"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="@dimen/sp13" />


                <EditText
                    android:id="@+id/edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/ccp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/romul"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingEnd="@dimen/dp10"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/whiteColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/sp13"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/business_category"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green">

                <Spinner
                    android:id="@+id/spinnerBusinessCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@null"
                    android:textSize="@dimen/sp13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp10"
                    android:contentDescription="@string/image"
                    android:src="@drawable/dropdown" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/experience"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtExperience"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green"
                android:fontFamily="@font/romul"
                android:hint="@string/experience"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/location"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green"
                android:fontFamily="@font/romul"
                android:hint="@string/location"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/availability"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAvailability"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green"
                android:drawableEnd="@drawable/calendar"
                android:drawablePadding="@dimen/dp10"
                android:fontFamily="@font/romul"
                android:hint="@string/set"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/is_your_business_black_owned"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:button="@drawable/bg_radio_button"
                    android:fontFamily="@font/romul"
                    android:paddingStart="@dimen/dp5"
                    android:text="@string/yes"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/sp13"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp20"
                    android:button="@drawable/bg_radio_button"
                    android:fontFamily="@font/romul"
                    android:paddingStart="@dimen/dp5"
                    android:text="@string/no"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/sp13"
                    tools:ignore="RtlSymmetry" />

            </RadioGroup>

            <EditText
                android:id="@+id/edtWebsiteLink"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/bg_curved_edit_text_green"
                android:fontFamily="@font/romul"
                android:hint="@string/website_link"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/romul"
                android:text="@string/about_me"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAboutMe"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green"
                android:fontFamily="@font/romul"
                android:gravity="start|top"
                android:hint="@string/about_me"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:padding="@dimen/dp10"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="@dimen/dp15"
                android:fontFamily="@font/romul"
                android:text="@string/upload_video"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/add" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/upload_icon" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="@dimen/dp15"
                android:fontFamily="@font/romul"
                android:text="@string/upload_images"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/add" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/bg_curved_edit_text_green">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_Picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:riv_corner_radius="@dimen/dp5" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/upload_icon" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp40"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/btn1"
                android:fontFamily="@font/trajanpro_regular"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sp13" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>